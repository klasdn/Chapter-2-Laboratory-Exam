#include <iostream> 

using namespace std;

int main()

{

double area = 0, length = 0, width = 0, perimeter = 0;

cout << "Enter length: ";
cin >> length;
cout <<"\n";
cout << "Enter width: ";
cin >> width;
cout <<"\n";
area = (length * width);
perimeter = (2 * (length + width));
cout << "Area is: "<<area<< ".";
cout <<"\n\n";
cout << "Perimeter is: "<<perimeter<< ".";
cout <<"\n\n";
return 0;
}
